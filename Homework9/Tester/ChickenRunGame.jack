class ChickenRunGame{
    field boolean play;
    field Farmer farmer;
    field Chicken player;
    
   
    
    constructor ChickenRunGame new(){
        let play = true;
        let player = Chicken.new(7300);
        let farmer = Farmer.new();
        return this;

    }

        method void gamePlay(){
            
            while (play){
                do player.draw();
                do gameCheck();
                do farmer.moveFarmer();
                do player.jump();
                do Output.moveCursor(4, 0);
                do Output.printString("Score:");
                do Output.printInt(score());
                
                }
            do dispose();
            return;
            }
            
        
        method int score(){
            return player.getScore();
        }

        method void gameCheck(){
            var int key;
            let key = Keyboard.keyPressed();
            if (key = 113){
                let play = false;
            }
            
            return;
        }

        method void dispose(){
            do farmer.dispose();
            do player.dispose();
            do Memory.deAlloc(this);
            return;
        }
}

